rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read profiles to find people to share with
      // But only allow them to write to their own profile
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Documents collection
    match /documents/{docId} {
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid || 
        exists(/databases/$(database)/documents/shares/$(docId + "_" + request.auth.uid))
      );
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Shares collection
    match /shares/{shareId} {
      allow read: if isAuthenticated() && (
        resource.data.granteeId == request.auth.uid || 
        resource.data.ownerId == request.auth.uid
      );
      // Allow creation if the requester is the owner of the document being shared
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Audit logs
    match /auditLogs/{logId} {
      // Allow create/update for any authenticated user
      allow create, update: if isAuthenticated();
      allow read: if false; 
    }
  }
}
